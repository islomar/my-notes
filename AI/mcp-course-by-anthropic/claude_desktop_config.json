{
    "mcpServers": {
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "~/workspace/my-notes/AI/mcp-course-by-anthropic"
            ]
        },
        "research": {
            "command": "uv",
            "args": [
                "--directory",
                "~/workspace/my-notes/AI/mcp-course-by-anthropic",
                "run",
                "research_server.py"
            ]
        },
        "fetch": {
            "command": "uvx",
            "args": [
                "mcp-server-fetch"
            ]
        }
    }
}